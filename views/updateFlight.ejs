<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>project</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
</head>
<body>
<!-- Modal -->
<div class="modal fade" id="allFlightUpdate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Update Form</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container text-center" id="modalBodyUpdate">
                    <div class="row" id="updateFlight">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="UF">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title " >
                    Update Flight
                </h5>
                <button type="button" class="btn-close"
                        data-bs-dismiss="modal">
                </button>
            </div>
            <div class="modal-body">
                <form class="row g-3">
                    <div class="col-md-3">
                        <label for="airlineNameUpdate" class="form-label" >Choose an airline<span style="color: red;">*</span></label>
                        <input type="text" class="form-control" id="airlineNameUpdate" maxlength="10">
                    </div>
                    <div class="col-md-4">
                        <label for="flightTimeUpdate" class="form-label">Choose a time for the flight:<span style="color: red;">*</span></label>
                        <input type="datetime-local" class="form-control" id="flightTimeUpdate">
                    </div>
                    <div class="col-md-4">
                        <label for="landTimeFlightUpdate" class="form-label">Choose a time for flight landing:<span style="color: red;">*</span></label>
                        <input type="datetime-local" class="form-control" id="landTimeFlightUpdate">
                    </div>
                    <div class="col-md-3">
                        <label for="sourceFlightUpdate" class="form-label">Choose a source<span style="color: red;">*</span></label>
                        <br id="brNameUpdate">
                        <span id="nameAirportStateUpdateFlight" style="font-size: large"></span>
                        <input type="text" class="form-control" id="sourceFlightUpdate" maxlength="20">
                    </div>
                    <div class="col-md-3">
                        <label for="destinationFlightUpdate" class="form-label">Choose a destination<span style="color: red;">*</span></label>
                        <input type="text" class="form-control" id="destinationFlightUpdate" maxlength="20">
                    </div>
                    <div class="col-md-3">
                        <label for="priceFlightUpdate" class="form-label">Choose a price
                            <span style="color: red;">*</span>
                        </label>
                        <input type=number class="form-control" id="priceFlightUpdate" required>
                    </div>
                    <span id="flightID"></span>
                    <div class="col-12">
                        <button class="btn btn-primary" type="submit" id="submitUpdate">update</button>
                    </div>
                    <div>
                        the <span style="color: red;">*</span> mark symbolizes required fields
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/updateFlight.js"></script>
</body>
</html>