<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>

<!-- Modal -->
<div class="modal fade" id="registerForm" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="registerFormToggleLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="registerFormToggleLabel">register form</h1>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">username:</label>
                        <input type="text" class="form-control" id="usernameInputRegister" maxlength="10">
                        <label id="usernameLabelRegister">Please Enter A Username</label>
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">password:</label>
                        <input class="form-control" id="passwordInputRegister" type="password" maxlength="20">
                        <label id="passwordLabelRegister">Please Enter A Password</label>
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">firstname:</label>
                        <input class="form-control" id="firstnameInputRegister" type="text" maxlength="15">
                        <label id="firstnameLabelRegister">Please Enter Your First Name</label>
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">lastname:</label>
                        <input class="form-control" id="lastnameInputRegister" type="text" maxlength="15">
                        <label id="lastnameLabelRegister">Please Enter Your Last Name</label>
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">email:</label>
                        <input class="form-control" id="emailInputRegister" type="email" maxlength="30">
                        <label id="emailLabelRegister">Please Enter Your Email</label>
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">age:</label>
                        <input class="form-control" id="ageInputRegister" type="number" min="1" max ="120">
                        <label id="ageLabelRegister">Please Enter Your Age</label>
                    </div>
                </form>
                <label id="errorRegisterLabel">Username Is Already Taken</label>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-target="#loginForm" data-bs-toggle="modal">login</button>
                <button type="button" class="btn btn-primary" id="registerButton">sign up</button>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script src="/login.js"></script>
</body>
</html>