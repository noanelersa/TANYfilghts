<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>

<!-- Modal -->
<div class="modal fade" id="adminCreateForm" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="adminCreateFormToggleLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="adminCreateFormToggleLabel">create admin form</h1>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">username:</label>
                        <input type="text" class="form-control" id="usernameInputAdminCreate" maxlength="10">
                        <label id="usernameLabelAdminCreate" class="red_color">Please Enter A Username</label>
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">password:</label>
                        <input class="form-control" id="passwordInputAdminCreate" type="password" maxlength="20">
                        <label id="passwordLabelAdminCreate" class="red_color">Please Enter A Password</label>
                    </div>
                </form>
                <label id="errorAdminCreateLabel" class="red_color">Username Is Already Taken</label>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="adminCreateButton">register</button>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
</body>
</html>